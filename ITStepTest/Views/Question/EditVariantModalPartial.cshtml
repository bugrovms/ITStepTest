<div class="modal-body">
    <div class="form-group">
        <label for="text">Текст</label>
        <input type="text" class="form-control" id="text" name="text" value="@ViewBag.Variant.Text">
    </div>
    @if (ViewBag.Variant.True) { 
        <div class="checkbox">
        <label>
            <input type="checkbox" name="True" checked> Правильный
        </label>
    </div>
    }
    else { 
    <div class="checkbox">
        <label>
            <input type="checkbox" name="True"> Правильный
        </label>
    </div>
    }    
    <div class="form-group hide">
        <label for="Id">Variant</label>
        <input type="text" class="form-control" id="Id" name="Id" value="@ViewBag.Variant.Id">
    </div>
    <div class="form-group hide">
        <label for="Question">Variant</label>
        <input type="text" class="form-control" id="Question" name="question" value="@ViewBag.Variant.Question">
    </div>
    <div class="form-group hide">
        <label for="Link">Link</label>
        <input type="text" class="form-control" id="Link" name="link" value="@ViewBag.Link">
    </div>  
</div>